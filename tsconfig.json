{
  "compilerOptions": {
    // 允许从没有设置默认导出的模块中默认导入。这并不影响代码的输出，仅为了类型检查。
    "allowSyntheticDefaultImports": true,
    // 生成相应的 .d.ts文件
    "declaration": true,
    "alwaysStrict": true,
    // 显示诊断信息
    "diagnostics": false,
    // 更改使TypeScript生成的输出更接近Babel生成的输出
    "esModuleInterop": true,
    // 在 .tsx文件里支持JSX
    "jsx": "react",
    // 指定生成哪个模块系统代码
    "module": "esnext",
    // 决定如何处理模块
    "moduleResolution": "node",
    // 不生成输出文件。
    "noEmit": true,
    // 若有未使用的局部变量则抛错。
    "noUnusedLocals": true,
    // 若有未使用的参数则抛错。
    "noUnusedParameters": true,
    // 模块名到基于 baseUrl的路径映射的列表。
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@Images": ["src/assets/images"]
    },
    // 给错误和消息设置样式，使用颜色和上下文。
    "pretty": true,
    // 删除所有注释，除了以 /!*开头的版权信息。
    "removeComments": true,
    "sourceMap": true,
    // 启用所有严格类型检查选项
    "strict": true,
    "strictNullChecks": true,
    // 指定ECMAScript目标版本
    "target": "esnext",
    // "allowJs": true,
    "typeRoots": ["node_modules/@types/", "./global.d.ts"]
  },
  "include": ["src/**/*", "./global.d.ts", "mocks/**/*"],
  "exclude": ["node_modules"]
}
